<section class="container">
  <div class="block">
    <h2>¡Ingenieria de Software es la mejor ingenieria!</h2>
    <img src="/imagen.jpg" alt="gato" />
    <div class="link">
      <a class="btn fijo" id="btnSi" href="#">Si</a>
      <a class="btn derecho" id="btnNo" href="#">No</a>
    </div>
  </div>
</section>
<!-- Modal -->
<div id="modal" class="modal">
  <div class="modal-content">
    <p>Que fue causa</p>
    <button id="closeModal">Aceptar</button>
  </div>
</div>

<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  .block {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  img {
    height: 200px;
    width: auto;
  }
  .link {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200px;
    position: relative;
  }
  .btn {
    margin: 10px;
    padding: 10px 20px;
    background-color: black;
    border-radius: 5%;
    text-decoration: none;
    color: white;
    font-weight: bold;
  }
  #btnSi {
    position: relative;
    left: -25%;
  }
  #btnNo {
    position: fixed;
    left: 50%; /* Se inicia a la derecha del "Sí" */
  }
  /* MODAL */
  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
  }
  .modal-content {
    background: white;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
  }
  #closeModal {
    margin-top: 10px;
    padding: 5px 15px;
    background: yellow;
    border: none;
    cursor: pointer;
    font-weight: bold;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var btnNo = document.getElementById("btnNo") as HTMLAnchorElement | null;
    var btnSi = document.getElementById("btnSi") as HTMLAnchorElement | null;
    var modal = document.getElementById("modal") as HTMLDivElement | null;
    var closeModal = document.getElementById(
      "closeModal"
    ) as HTMLButtonElement | null;

    if (btnNo && btnSi && modal && closeModal) {
      btnNo.addEventListener("mouseenter", function () {
        const viewportWidth = window.innerWidth;
        const viewportHeight = window.innerHeight;
        const btnWidth = btnNo.offsetWidth;
        const btnHeight = btnNo.offsetHeight;

        let randomX = Math.random() * (viewportWidth - btnWidth);
        let randomY = Math.random() * (viewportHeight - btnHeight);

        // Evitar superposición con "Sí"
        const btnSiRect = btnSi.getBoundingClientRect();

        if (
          randomX > btnSiRect.left - btnWidth &&
          randomX < btnSiRect.right + btnWidth &&
          randomY > btnSiRect.top - btnHeight &&
          randomY < btnSiRect.bottom + btnHeight
        ) {
          randomX = Math.random() * (viewportWidth - btnWidth);
          randomY = Math.random() * (viewportHeight - btnHeight);
        }

        btnNo.style.left = `${randomX}px`;
        btnNo.style.top = `${randomY}px`;
      });

      btnSi.addEventListener("click", function () {
        modal.style.display = "flex";
      });

      closeModal.addEventListener("click", function () {
        modal.style.display = "none";
      });
    }
  });
</script>
